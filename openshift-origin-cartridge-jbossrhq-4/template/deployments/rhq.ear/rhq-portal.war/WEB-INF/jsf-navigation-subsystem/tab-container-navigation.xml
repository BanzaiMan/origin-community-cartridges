<?xml version="1.0"?>

<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

   <!-- ResourceConfigurationUpdate History -->
   <navigation-rule>
      <from-view-id>/rhq/subsystem/configurationUpdate.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/subsystem/configurationUpdate.xhtml</to-view-id>
         <redirect/>
      </navigation-case>
      
      <navigation-case> 
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/subsystem/configurationUpdate.xhtml</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>
   
