<?xml version="1.0"?>

<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

   <converter>
      <converter-id>IntegerOptionItemConverter</converter-id>
      <converter-class>org.rhq.enterprise.gui.common.converter.IntegerOptionItemConverter</converter-class>
   </converter>

   <converter>
      <converter-id>StringListToStringConverter</converter-id>
      <converter-class>org.rhq.enterprise.gui.common.converter.StringListToStringConverter</converter-class>
   </converter>

   <converter>
      <converter-id>DurationConverter</converter-id>
      <converter-class>org.rhq.enterprise.gui.common.time.converter.DurationConverter</converter-class>
   </converter>

   <converter>
      <converter-id>LongDurationConverter</converter-id>
      <converter-class>org.rhq.enterprise.gui.common.time.converter.LongDurationConverter</converter-class>
   </converter>
   
   <converter>
      <converter-id>ShortDurationConverter</converter-id>
      <converter-class>org.rhq.enterprise.gui.common.time.converter.ShortDurationConverter</converter-class>
   </converter>
   
   <converter>
      <converter-id>RelativeDurationConverter</converter-id>
      <converter-class>org.rhq.enterprise.gui.common.time.converter.RelativeDurationConverter</converter-class>
   </converter>
    
   <converter>
      <converter-id>UserDateTimeConverter</converter-id>
      <converter-class>org.rhq.enterprise.gui.common.time.converter.UserDateTimeConverter</converter-class>
   </converter>

</faces-config>