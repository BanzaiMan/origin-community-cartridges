<?xml version="1.0"?>

<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

   <component>
      <component-type>org.jboss.on.ErrorPopup</component-type>
      <component-class>org.rhq.enterprise.gui.common.error.ErrorPopupComponent</component-class>
   </component>

   <render-kit>
      <renderer>
         <description>Renders the necessary div and link to display an error in a popup window.</description>
         <component-family>org.jboss.on.ErrorPopup</component-family>
         <renderer-type>org.jboss.on.ErrorPopup</renderer-type>
         <renderer-class>org.rhq.enterprise.gui.common.error.ErrorPopupRenderer</renderer-class>
      </renderer>
   </render-kit>

</faces-config>