<?xml version="1.0"?>

<faces-config version="1.2" 
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                                  http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

    <component>
        <component-type>org.jboss.on.Metric</component-type>
        <component-class>org.rhq.enterprise.gui.common.metric.MetricComponent</component-class>
    </component>

    <render-kit>
        <renderer>
            <description>renderer for MetricComponent</description>
            <component-family>org.jboss.on.Time</component-family>
            <renderer-type>org.jboss.on.Metric</renderer-type>
            <renderer-class>org.rhq.enterprise.gui.common.metric.MetricRenderer</renderer-class>
        </renderer>
    </render-kit>

</faces-config>